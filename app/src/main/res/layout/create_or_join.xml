<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/view" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:title="Assassin Spoons"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <android.support.design.widget.FloatingActionButton
    android:id="@+id/createBtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|end"
        app:backgroundTint="#20af00"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/joinBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:backgroundTint="#f68243"
        android:layout_below="@+id/createText"
        android:layout_alignLeft="@+id/createBtn"
        android:layout_alignStart="@+id/createBtn"
        android:layout_marginTop="20dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/mapBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"

        android:layout_below="@+id/infoBtn"
        android:layout_alignLeft="@+id/infoBtn"
        android:layout_alignStart="@+id/infoBtn"
        android:layout_marginTop="20dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/infoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:backgroundTint="#94329b"
        android:layout_below="@+id/statBtn"
        android:layout_alignLeft="@+id/statBtn"
        android:layout_alignStart="@+id/statBtn"
        android:layout_marginTop="20dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/statBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:backgroundTint="#ff4649"
        android:layout_below="@+id/joinBtn"
        android:layout_alignLeft="@+id/joinBtn"
        android:layout_alignStart="@+id/joinBtn"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Create a game"
        android:id="@+id/createText"
        android:textSize="22dp"
        android:paddingBottom="13dp"
        android:layout_alignBottom="@+id/createBtn"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Join a game"
        android:id="@+id/joinText"
        android:textSize="22dp"
        android:paddingBottom="13dp"
        android:layout_alignBottom="@+id/joinBtn"
        android:layout_alignLeft="@+id/createText"
        android:layout_alignStart="@+id/createText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Instructions"
        android:id="@+id/instructionText"
        android:textSize="22dp"
        android:paddingBottom="13dp"
        android:layout_alignBottom="@+id/infoBtn"
        android:layout_alignLeft="@+id/joinText"
        android:layout_alignStart="@+id/joinText"
        android:layout_marginTop="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Statistics"
        android:id="@+id/statText"
        android:textSize="22dp"
        android:paddingBottom="13dp"
        android:layout_alignBottom="@+id/statBtn"
        android:layout_alignLeft="@+id/joinText"
        android:layout_alignStart="@+id/joinText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Current Map"
        android:id="@+id/mapText"
        android:textSize="22dp"
        android:paddingBottom="13dp"
        android:layout_alignBottom="@+id/mapBtn"
        android:layout_alignLeft="@+id/instructionText"
        android:layout_alignStart="@+id/instructionText"
        android:layout_marginTop="20dp" />

</RelativeLayout>