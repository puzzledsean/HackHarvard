<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context=".AssignTargetsActivity"
    android:background="#2c7da5">

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/select_progbar"
        android:layout_centerInParent="true"
        android:maxHeight="100dp"
        android:maxWidth="300dp"
        android:minHeight="100dp"
        android:minWidth="300dp"
        android:max="@android:integer/config_mediumAnimTime"
        android:indeterminate="false"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Now Selecting Targets"
        android:id="@+id/select_text"
        android:layout_marginBottom="71dp"
        android:textSize="30dp"
        android:layout_above="@+id/select_progbar"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textStyle="bold" />
</RelativeLayout>